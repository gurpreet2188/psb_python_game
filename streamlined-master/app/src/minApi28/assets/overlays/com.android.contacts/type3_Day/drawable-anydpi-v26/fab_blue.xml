<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="360"
                android:startColor="@*android:color/holo_orange_dark"
                android:centerColor="@*android:color/highlighted_text_holo_dark"
                android:endColor="@*android:color/highlighted_text_holo_light"
                android:type="linear" />

            <corners android:radius="24.0dip" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="oval" >
            <solid android:color="#d1ffffff" />
            <corners android:radius="24.0dip" />
        </shape>
    </item>



</layer-list>