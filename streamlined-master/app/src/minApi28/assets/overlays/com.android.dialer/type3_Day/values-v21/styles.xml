<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BackgroundOnlyTheme" parent="@android:style/Theme.Material.Light">
        <item name="android:colorControlNormal">#1e1e1e</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoDisplay">false</item>
    </style>



    <!-- thanks jimmy and braden -->
    <style name="ListViewStyle" parent="@android:style/Widget.Material.Light.ListView">
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="Base.Widget.AppCompat.DrawerArrowToggle.Common" parent="">
        <item name="*com.android.dialer:arrowHeadLength">8.0dip</item>
        <item name="*com.android.dialer:arrowShaftLength">16.0dip</item>
        <item name="*com.android.dialer:color">#1e1e1e</item>
        <item name="*com.android.dialer:spinBars">true</item>
        <item name="*com.android.dialer:thickness">2.0dip</item>
    </style>

    <style name="Widget.AppCompat.DrawerArrowToggle" parent="@*com.android.dialer:style/Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="*com.android.dialer:color">#1e1e1e</item>
        <item name="android:color">#1e1e1e</item>
        <item name="android:tint">#1e1e1e</item>
    </style>


    <style name="CallLogCardStyle" parent="@*com.android.dialer:style/CardView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3.0dip</item>
        <item name="android:baselineAligned">false</item>
        <item name="*com.android.dialer:cardBackgroundColor">#06000000</item>
        <item name="*com.android.dialer:cardCornerRadius">24.0dip</item>
    </style>

    <style name="Base.ThemeOverlay.AppCompat.ActionBar" parent="@*com.android.dialer:style/Base.ThemeOverlay.AppCompat">
        <item name="*com.android.dialer:colorControlNormal">#1e1e1e</item>
        <item name="*com.android.dialer:searchViewStyle">@*com.android.dialer:style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>

    <style name="Base.ThemeOverlay.AppCompat.Dark.ActionBar" parent="@*com.android.dialer:style/Base.ThemeOverlay.AppCompat.Dark">
        <item name="*com.android.dialer:colorControlNormal">#1e1e1e</item>
        <item name="*com.android.dialer:searchViewStyle">@*com.android.dialer:style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>


    <style name="DialtactsActionBarOverflow" parent="@android:style/Widget.Material.Light.ActionButton.Overflow">
        <item name="android:colorControlNormal">#d81e1e1e</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:colorBackgroundFloating">@*android:color/background_material_light</item>
        <item name="android:background">@*android:color/background_material_light</item>
        <item name="android:popupMenuStyle">@android:style/ThemeOverlay.Material</item>
        <item name="android:popupBackground">@*android:color/background_material_light</item>
    </style>
    <style name="DialtactsTheme1" parent="@android:style/Theme.Material.Light">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:colorControlNormal">#d81e1e1e</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorPrimary">@android:color/background_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_red_light</item>
    </style>

    <style name="TextAppearanceMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#1e1e1e</item>
    </style>

    <style name="TextAppearanceSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#d81e1e1e</item>
    </style>

    <style name="AlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
    </style>

    <style name="DialtactsActionBarTitleText" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:colorControlNormal">#d81e1e1e</item>
        <item name="android:textColor">#1e1e1e</item>
    </style>
</resources>