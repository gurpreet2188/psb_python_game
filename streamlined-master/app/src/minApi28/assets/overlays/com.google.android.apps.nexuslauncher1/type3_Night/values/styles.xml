<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WidgetContainerTheme" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="android:colorPrimary">@*android:color/background_material_dark</item>
        <item name="android:colorSecondary">@android:color/holo_purple</item>
        <item name="android:colorEdgeEffect">@*android:color/background_material_dark</item>
    </style>

    <style name="AllAppsEmptySearchBackground">
        <item name="android:colorForeground">@android:color/holo_purple</item>
        <item name="android:colorControlHighlight">#ffffffff</item>
        <item name="android:colorPrimary">#ffe0e0e0</item>
    </style>

    <style name="AllAppsEmptySearchBackground.Dark" parent="">
        <item name="android:colorForeground">@android:color/holo_purple</item>
        <item name="android:colorControlHighlight">#ffffffff</item>
        <item name="android:colorPrimary">#ffe0e0e0</item>
    </style>

    <style name="SettingsTheme" parent="@android:style/Theme.Material">
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:colorPrimary">@android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_blue_light</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
        <item name="android:statusBarColor">@android:color/holo_blue_light</item>
    </style>

    <style name="BaseLauncherTheme" parent="@*android:style/Theme.Material">
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:colorEdgeEffect">#22ffffff</item>
    </style>


    <color name="colorAccent">@*android:color/accent_material_dark</color>
    <color name="all_apps_bg_hand_fill">@android:color/holo_purple</color>
    <color name="all_apps_bg_hand_fill_dark">@android:color/holo_purple</color>

</resources>
