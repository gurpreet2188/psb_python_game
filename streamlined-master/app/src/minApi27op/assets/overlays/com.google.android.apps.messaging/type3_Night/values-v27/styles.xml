<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BugleBaseTheme" parent="@*com.google.android.apps.messaging:style/BugleDarkNavBarTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">#00000000</item>
    </style>
    <style name="BugleBaseToolbarTheme" parent="@*com.google.android.apps.messaging:style/Theme.AppCompat.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">#00000000</item>
    </style>
    <style name="BugleCameraActivityTheme" parent="@*com.google.android.apps.messaging:style/BugleDarkNavBarTheme" />
    <style name="BuglePhotoViewTheme" parent="@*com.google.android.apps.messaging:style/PhotoViewTheme.Translucent">
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@android:color/background_dark</item>
        <item name="actionModeShareDrawable">@*com.google.android.apps.messaging:drawable/ic_share_light</item>
    </style>
    <style name="BuglePromoTheme" parent="@*com.google.android.apps.messaging:style/BugleDarkNavBarTheme" />
    <style name="Theme.GoogleMaterial.Light" parent="@*com.google.android.apps.messaging:style/Base.Theme.GoogleMaterial.Dark">
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    <style name="Theme.GoogleMaterial.Light.BottomSheetDialog" parent="@*com.google.android.apps.messaging:style/Base.Theme.GoogleMaterial.Light.BottomSheetDialog">
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
    </style>
    <style name="BugleDarkNavBarTheme" parent="@*com.google.android.apps.messaging:style/BugleTheme">
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@android:color/black</item>
    </style>
</resources>