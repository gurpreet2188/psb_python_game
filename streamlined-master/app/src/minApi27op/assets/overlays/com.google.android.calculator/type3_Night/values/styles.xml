<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme" parent="@*com.google.android.calculator:style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="*com.google.android.calculator:isLightTheme">false</item>
        <item name="android:backgroundTint">@android:color/background_dark</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:statusBarColor">#66ffffff</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.google.android.calculator:colorPrimary">@android:color/background_dark</item>
        <item name="*com.google.android.calculator:colorAccent">@android:color/background_dark</item>
    </style>

    <style name="PadButtonStyle" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:background">@*com.google.android.calculator:drawable/pad_button_background</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:minHeight">0.0dip</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:onClick">onButtonClick</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@*com.google.android.calculator:font/google_sans_display</item>
        <item name="android:layout_rowWeight">1.0</item>
        <item name="android:layout_columnWeight">1.0</item>
    </style>

    <style name="DisplayTextStyle" parent="@android:style/Widget.Material.TextView">
        <item name="android:textColor">#d8ffffff</item>
        <item name="android:gravity">end|bottom|center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:fontFamily">@*com.google.android.calculator:font/google_sans_display</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>
</resources>