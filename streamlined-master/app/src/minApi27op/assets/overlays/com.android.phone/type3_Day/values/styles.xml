<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NetworkOperatorsSettingsTheme" parent="@android:style/Theme.Material.Settings">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:colorControlNormal">#6e6e6e</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:colorPrimary">@android:color/holo_red_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_red_light</item>
    </style>

    <style name="Theme.Material.Settings" parent="@android:style/Theme.Material.Settings">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:colorControlNormal">#6e6e6e</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:actionBarSize">56.0dip</item>
        <item name="android:colorPrimary">@android:color/holo_red_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_red_light</item>
    </style>

    <style name="Theme.Settings" parent="@android:style/Theme.Material.Light">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:colorControlNormal">#6e6e6e</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="SettingsLight" parent="@android:style/Theme.Material.Light">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:colorControlNormal">#6e6e6e</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">#1e1e1e</item>
        <item name="android:textColorSecondary">#6e6e6e</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:colorPrimary">@android:color/holo_red_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_red_light</item>
    </style>

    <style name="DialerAlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:colorControlNormal">#6e6e6e</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
    </style>
</resources>