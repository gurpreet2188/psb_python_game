<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CallSubjectDialogTheme" parent="@android:style/Theme.Material.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowElevation">0.0dip</item>
    </style>

    <style name="ContactsAlertDialogTheme" parent="@android:style/Theme.Material.Dialog">
        <item name="android:colorAccent">@android:color/holo_blue_bright</item>
    </style>
    <style name="ConfirmAddDetailDialogTheme" parent="@android:style/Theme.Material.Dialog.MinWidth">
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="ContactEditorAccountsChangedActivityTheme" parent="@android:style/Theme.Material">
        <item name="android:textColorPrimary">@android:color/holo_green_light</item>
        <item name="android:textColorSecondary">@android:color/holo_green_dark</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:colorAccent">@android:color/holo_blue_bright</item>
    </style>

    <style name="Theme.PhotoSelector" parent="@android:style/Theme.Material" />

    <style name="SelectableItem" parent="@android:style/Theme.Material" />

    <style name="ExpandingEntryCardStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:backgroundTint">@android:color/background_dark</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12.0dip</item>
        <item name="android:layout_marginStart">8.0dip</item>
        <item name="android:layout_marginEnd">8.0dip</item>
        <item name="android:elevation">@null</item>
    </style>

    <style name="Oneplus.Contacts.BaseTheme" parent="@*com.android.contacts:style/Oneplus.Theme.DeviceDefault">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:textColorPrimary">@*com.android.contacts:color/oneplus_primary_text_color</item>
        <item name="android:textColorSecondary">@*com.android.contacts:color/oneplus_secondary_text_color</item>
        <item name="android:listViewStyle">@*com.android.contacts:style/ListViewStyle</item>
        <item name="android:actionModeBackground">@android:color/holo_blue_light</item>
        <item name="android:actionModeCloseDrawable">@*com.android.contacts:drawable/ic_close_lt</item>
        <item name="android:actionBarTabBarStyle">@*com.android.contacts:style/ContactsActionBarTabBarStyle</item>
        <item name="android:actionBarTabTextStyle">@*com.android.contacts:style/OPContactsActionBarTabTextStyle</item>
        <item name="android:alertDialogTheme">@*com.android.contacts:style/OnePlusContactsAlertDialogTheme</item>
        <item name="android:fastScrollThumbDrawable">@*com.android.contacts:drawable/fastscroll_thumb</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
        <item name="android:actionModeSplitBackground">@android:color/holo_blue_light</item>
        <item name="android:colorControlActivated">@*android:color/white</item>
        <item name="android:colorPrimary">@android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_blue_light</item>
        <item name="android:statusBarColor">@android:color/holo_blue_light</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.android.contacts:onePlusPrimaryColor">@*android:color/accent_material_dark</item>
        <item name="*com.android.contacts:onePlusActionbarTitleColor">@*android:color/white</item>
        <item name="*com.android.contacts:onePlusActionbarIconColor">@*android:color/white</item>
        <item name="*com.android.contacts:onePlusActionbarBackgroundColor">@android:color/holo_blue_light</item>
        <item name="*com.android.contacts:onePlusActionbarIconAlpha">1.0</item>
    </style>

    <style name="Oneplus.Theme.DeviceDefault" parent="@*com.android.contacts:style/Oneplus.Theme.Material.Light.DarkActionBar">
        <item name="*com.android.contacts:onePlusActionbarBackgroundColor">@android:color/holo_blue_light</item>
        <item name="*com.android.contacts:onePlusActionbarLineColor">@*android:color/transparent</item>
    </style>

    <style name="OPDialtactsTheme" parent="@*com.android.contacts:style/OPPeopleTheme">
        <item name="android:statusBarColor">@android:color/holo_blue_light</item>
        <item name="android:navigationBarColor">@*android:color/holo_purple</item>
        <item name="android:windowBackground">@*android:color/background_dark</item>
    </style>
    <style name="OnePlusContactsAlertDialogTheme" parent="@*com.android.contacts:style/Oneplus.Theme.DeviceDefault.Dialog.Alert">
        <item name="*com.android.contacts:onePlusPrimaryColor">@*android:color/accent_material_dark</item>
    </style>
    <style name="Widget.Design.CoordinatorLayout" parent="@android:style/Widget">
        <item name="*com.android.contacts:opStatusBarBackground">@android:color/holo_blue_light</item>
    </style>

    <style name="Oneplus.Widget.Material.Light.TimePicker" parent="@*com.android.contacts:style/Oneplus.Widget.Material.TimePicker"/>

    <style name="OneplusThemeLightBase" parent="@*com.android.contacts:style/OneplusThemeBase"/>
</resources>