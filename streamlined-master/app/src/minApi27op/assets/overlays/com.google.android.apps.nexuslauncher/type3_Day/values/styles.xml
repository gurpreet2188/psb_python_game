<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WidgetContainerTheme" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="android:colorPrimary">?android:colorBackgroundFloating</item>
        <item name="android:colorSecondary">?android:colorBackgroundFloating</item>
        <item name="android:colorEdgeEffect">?android:colorBackgroundFloating</item>
    </style>

    <style name="SettingsTheme" parent="@android:style/Theme.Material.Light">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:colorPrimary">@android:color/holo_red_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_red_light</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
        <item name="android:statusBarColor">@android:color/holo_red_light</item>
    </style>

    <style name="BaseLauncherTheme" parent="@*android:style/Theme.Material.Light.NoActionBar">
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:colorEdgeEffect">#221e1e1e</item>
    </style>



    <color name="colorAccent">@*android:color/accent_material_light</color>

</resources>
