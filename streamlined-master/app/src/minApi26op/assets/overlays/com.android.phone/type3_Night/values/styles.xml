<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NetworkOperatorsSettingsTheme" parent="@android:style/Theme.Material.Settings">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:colorPrimary">@android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_blue_light</item>
    </style>

    <style name="Theme.Material.Settings" parent="@android:style/Theme.Material.Settings">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:actionBarSize">56.0dip</item>
        <item name="android:colorPrimary">@android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_blue_light</item>
    </style>

    <style name="Theme.Settings" parent="@android:style/Theme.Material">
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="SettingsLight" parent="@android:style/Theme.Material">
        <item name="android:textColorPrimary">@android:color/holo_green_light</item>
        <item name="android:textColorSecondary">@android:color/holo_green_dark</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:colorPrimary">@android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_blue_light</item>
    </style>

    <style name="DialerAlertDialogTheme" parent="@android:style/Theme.Material.Dialog">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:colorAccent">@android:color/holo_blue_bright</item>
    </style>


    <style name="Oneplus.Theme.Material.Light.DarkActionBar" parent="@*com.android.phone:style/OneplusThemeBase">
        <item name="android:actionBarWidgetTheme">@null</item>
        <item name="android:actionBarTheme">@*com.android.phone:style/Oneplus.ThemeOverlay.Material.Dark.ActionBar</item>
        <item name="android:colorPrimary">@android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@@android:color/holo_blue_light</item>
        <item name="android:popupTheme">@*com.android.phone:style/Oneplus.ThemeOverlay.Material.Dark</item>
        <item name="*com.android.phone:onePlusActionbarTitleColor">@*android:color/white</item>
        <item name="*com.android.phone:onePlusActionbarSubtitleColor">@*android:color/white</item>
        <item name="*com.android.phone:onePlusTabTextColor">@*com.android.phone:color/oneplus_contorl_text_color_disable_light</item>
        <item name="*com.android.phone:onePlusTabTextSelectedColor">@*android:color/white</item>
        <item name="*com.android.phone:onePlusTabIndicatorColor">@*android:color/white</item>
        <item name="*com.android.phone:onePlusActionbarIconColor">@*android:color/white</item>
        <item name="*com.android.phone:onePlusActionbarBackgroundColor">@android:color/holo_blue_light</item>
        <item name="*com.android.phone:onePlusActionbarLineColor">@*android:color/transparent</item>
        <item name="*com.android.phone:onePlusActionbarBackground">@*com.android.phone:drawable/op_actionbar_background</item>
        <item name="*com.android.phone:onePlusActionbarTitleAlpha">1.0</item>
        <item name="*com.android.phone:onePlusActionbarSubtitleAlpha">0.7</item>
        <item name="*com.android.phone:onePlusTabTextAlpha">1.0</item>
        <item name="*com.android.phone:onePlusTabTextSelectedAlpha">1.0</item>
        <item name="*com.android.phone:onePlusActionbarIconAlpha">1.0</item>
        <item name="*com.android.phone:onePlusColorControlHighlight">@*com.android.phone:color/op_ripple_material_dark</item>
    </style>
</resources>