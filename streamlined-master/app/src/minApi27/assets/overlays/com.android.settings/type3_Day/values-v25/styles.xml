<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.V25.AppCompat.Light" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:colorBackgroundFloating">@android:color/background_light</item>
        <item name="android:navigationBarColor">@*android:color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>

    <style name="Base.CardView" parent="@android:style/Widget">
        <item name="android:backgroundTint">#000000</item>
        <item name="*com.android.settings:cardCornerRadius">0.0dip</item>
        <item name="*com.android.settings:cardElevation">0.0dip</item>
        <item name="*com.android.settings:cardMaxElevation">0.0dip</item>
        <item name="*com.android.settings:cardPreventCornerOverlap">true</item>
        <item name="*com.android.settings:cardUseCompatPadding">false</item>
    </style>
</resources>
