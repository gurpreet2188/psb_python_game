<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="Theme.Material.Notification" parent="">
    <item name="*android:notificationHeaderIconSize">@*android:dimen/notification_header_icon_size</item>
    <item name="*android:notificationHeaderStyle">@*android:style/Notification.Header</item>
    <item name="*android:notificationHeaderTextAppearance">@*android:style/TextAppearance.Material.Notification.Info</item>
    <item name="android:shadowColor">#ffffff</item>
    <item name="android:shadowDx">2</item>
    <item name="android:shadowDy">2</item>
    <item name="android:shadowRadius">4</item>
</style>

    <style name="Widget.Material.Notification.MessagingText" parent="@*android:style/Widget.Material.Light.TextView">
        <item name="*android:textAppearance">@*android:style/TextAppearance.Material.Notification</item>
        <item name="*android:ellipsize">end</item>
        <item name="*android:visibility">gone</item>
        <item name="*android:layout_width">fill_parent</item>
        <item name="*android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>
</resources>