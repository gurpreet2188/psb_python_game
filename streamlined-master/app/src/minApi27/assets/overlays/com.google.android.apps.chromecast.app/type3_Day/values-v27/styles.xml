<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NonTransparentStatusBar" parent="@*com.google.android.apps.chromecast.app:style/AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/background_light</item>
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarDividerColor">@null</item>
        <item name="*com.google.android.apps.chromecast.app:windowActionBar">false</item>
        <item name="*com.google.android.apps.chromecast.app:colorPrimaryDark">@android:color/background_light</item>
    </style>
    <style name="AppTheme.TransparentStatusBar" parent="@*com.google.android.apps.chromecast.app:style/AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">@null</item>
        <item name="*com.google.android.apps.chromecast.app:windowActionBar">false</item>
    </style>

    <style name="Theme.GoogleMaterial.Light" parent="@*com.google.android.apps.chromecast.app:style/Base.Theme.GoogleMaterial.Light">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.GoogleMaterial.Light.BottomSheetDialog" parent="@*com.google.android.apps.chromecast.app:style/Base.Theme.GoogleMaterial.Light.BottomSheetDialog">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
    </style>
</resources>
