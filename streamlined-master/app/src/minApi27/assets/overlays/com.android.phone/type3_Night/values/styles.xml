<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NetworkOperatorsSettingsTheme" parent="@android:style/Theme.Material.Settings">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:colorPrimary">@android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_blue_light</item>
    </style>

    <style name="Theme.Material.Settings" parent="@android:style/Theme.Material.Settings">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:actionBarSize">56.0dip</item>
        <item name="android:colorPrimary">@android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_blue_light</item>
    </style>

    <style name="Theme.Settings" parent="@android:style/Theme.Material">
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="SettingsLight" parent="@android:style/Theme.Material">
        <item name="android:textColorPrimary">@android:color/holo_green_light</item>
        <item name="android:textColorSecondary">@android:color/holo_green_dark</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:colorPrimary">@android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@android:color/holo_blue_light</item>
    </style>

    <style name="DialerAlertDialogTheme" parent="@android:style/Theme.Material.Dialog">
        <item name="android:colorPrimary">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:colorAccent">@android:color/holo_blue_bright</item>
    </style>
</resources>