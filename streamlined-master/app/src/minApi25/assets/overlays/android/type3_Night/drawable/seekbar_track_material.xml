<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@android:id/background">
        <shape android:tint="@*android:color/control_nodisable_material" android:shape="rectangle">
            <size android:height="1.0dip" />
            <solid android:color="@*android:color/control_nodisable_material" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@android:color/transparent" />
                <item>
                    <shape android:tint="?android:colorAccent" android:shape="rectangle">
                        <size android:height="1.0dip" />
                        <solid android:color="#11ffffff" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@android:color/transparent" />
                <item>
                    <shape android:tint="?android:colorAccent" android:shape="rectangle">
                        <size android:height="1.0dip" />
                        <solid android:color="?android:colorControlNormal" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>