<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Material.Settings.Dialog.Presentation" parent="@*android:style/Theme.Material.Light.Dialog.Presentation">
        <item name="android:colorPrimary">@*android:color/holo_red_light</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_red_light</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
        <item name="android:windowBackground">@*android:color/background_light</item>
       
    </style>

    <style name="Theme.Material.Settings" parent="@*android:style/Theme.Material.Light">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorPrimary">@*android:color/holo_red_light</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_red_light</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
        <item name="android:windowBackground">@*android:color/background_light</item>
       
    </style>

    <style name="Theme.Material.Settings.DialogWhenLarge" parent="@*android:style/Theme.Material.Light">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorPrimary">@*android:color/holo_red_light</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_red_light</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
        <item name="android:windowBackground">@*android:color/background_light</item>
       
    </style>

    <style name="Theme.DeviceDefault.Settings" parent="@*android:style/Theme.Material.Settings">
        <item name="*android:actionBarTheme">@*android:style/ThemeOverlay.Material.ActionBar</item>
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:colorPrimary">@*android:color/holo_red_light</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_red_light</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
        <item name="android:windowBackground">@*android:color/background_light</item>
    </style>

    <style name="Theme.Material.Settings.DialogWhenLarge.NoActionBar" parent="@*android:style/Theme.Material.Light.DialogWhenLarge.NoActionBar"/>
    <style name="Theme.Material.Settings.NoActionBar" parent="@*android:style/Theme.Material.NoActionBar"/>

    <style name="Theme.Material.Settings.Dialog.BaseAlert" parent="@*android:style/Theme.Material.Light.Dialog.BaseAlert">
        <item name="android:windowBackground">@*android:color/background_light</item>
        <item name="android:colorPrimary">@*android:color/holo_red_light</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_red_light</item>
    </style>

    <style name="Theme.DeviceDefault.Light.DialogWhenLarge" parent="@*android:style/Theme.Material.Light.DialogWhenLarge">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:colorPrimary">@*android:color/holo_red_light</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_red_light</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
        <item name="android:windowBackground">@*android:color/background_light</item>
    </style>



    <style name="Theme.DeviceDefault.Light.DialogWhenLarge.NoActionBar" parent="@*android:style/Theme.Material.Light.DialogWhenLarge.NoActionBar">
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
        <item name="android:windowBackground">@*android:color/background_light</item>
    </style>

    <style name="Theme.Material.Light.DialogWhenLarge" parent="@*android:style/Theme.Material.Light">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:windowBackground">@*android:color/background_light</item>
    </style>

    <style name="Theme.Material.Light.DialogWhenLarge.NoActionBar" parent="@*android:style/Theme.Material.Light.NoActionBar">
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
        <item name="android:windowBackground">@*android:color/background_light</item>
    </style>

    <!-- notification edit bg 7.1 -->
    <style name="Theme.DeviceDefault.Settings.Dark" parent="@*android:style/Theme.Material.Light">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:colorControlNormal">#d81e1e1e</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:tint">@*android:color/accent_material_light</item>
        <item name="android:colorPrimary">@*android:color/background_light</item>
        <item name="android:colorPrimaryDark">@*android:color/background_light</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
        <item name="android:windowBackground">@*android:color/background_light</item>
        <item name="colorSecondary">@*android:color/background_light</item>
    </style>
    <!-- //notification 7.1 -->

    <style name="Theme.DeviceDefault.Light.DarkActionBar" parent="@*android:style/Theme.Material.Light" >
        <item name="android:windowBackground">@*android:color/background_light</item>
        <item name="android:colorBackground">@*android:color/background_light</item>
        <item name="android:colorPrimary">@*android:color/holo_red_light</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_red_light</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
    </style>

    <style name="Theme.DeviceDefault.Resolver" parent="@*android:style/Theme.Material.Light">
        <item name="android:statusBarColor">@*android:color/transparent</item>
        <item name="android:colorPrimaryDark">@*android:color/transparent</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
        <item name="android:backgroundTint">@*android:color/background_light</item>
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:colorControlActivated">#d81e1e1e</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="Theme.DeviceDefault.Light.Dialog" parent="@*android:style/Theme.Material.Light.Dialog">
        <item name="android:textColorPrimary">#1e1e1e</item>
        <item name="android:textColorSecondary">#d81e1e1e</item>
    </style>

    <style name="Theme.Material.Light.Dialog.NoActionBar" parent="@*android:style/Theme.Material.Light.Dialog">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.Material.ActionBar" parent="@*android:style/ThemeOverlay.Material">
        <item name="android:colorControlNormal">?android:textColorPrimary</item>
        <item name="android:colorBackgroundFloating">@*android:color/background_light</item>
        <item name="android:elevation">0.0dip</item>
    </style>

    <style name="TextAppearance.Material.Notification" parent="@*android:style/TextAppearance.Material">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#1e1e1e</item>
    </style>

    <style name="TextAppearance.Material.Notification.Emphasis" parent="@*android:style/TextAppearance.Material">
        <item name="android:textColor">#d81e1e1e</item>
    </style>

    <style name="TextAppearance.Material.Notification.Info" parent="@*android:style/TextAppearance.Material">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#1e1e1e</item>
    </style>

    <style name="TextAppearance.Material.Notification.Line2" parent="@*android:style/TextAppearance.Material">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#1e1e1e</item>
    </style>

    <style name="TextAppearance.Material.Notification.Time" parent="@*android:style/TextAppearance.Material">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#2e2e2e</item>
    </style>

    <style name="TextAppearance.Material.Notification.Title" parent="@*android:style/TextAppearance.Material">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#d81e1e1e</item>
    </style>

    <!-- thanks davey and John -->
    <style name="Theme.Material.InputMethod" parent="@*android:style/Theme.Material.Panel">
        <item name="android:windowAnimationStyle">@*android:style/Animation.InputMethod</item>
        <item name="android:imeFullscreenBackground">@*android:color/background_floating_material_light</item>
        <item name="android:navigationBarColor">@android:color/background_light</item>
    </style>
</resources>