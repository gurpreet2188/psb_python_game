<?xml version="1.0" encoding="utf-8"?>
<resources>
   
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorLink">?android:colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:buttonBarStyle">?buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?buttonBarButtonStyle</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
    </style>

    <style name="ToolListBox">
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:paddingTop">20.0dip</item>
        <item name="android:paddingBottom">20.0dip</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:textSize">@*com.niksoftware.snapseed:dimen/tb_item_title_font_size</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:padding">@*com.niksoftware.snapseed:dimen/tb_padding</item>
        <item name="android:minWidth">@*com.niksoftware.snapseed:dimen/tb_button_min_width</item>
        <item name="android:minHeight">@*com.niksoftware.snapseed:dimen/tb_button_min_height</item>
        <item name="*com.niksoftware.snapseed:text_visible">@*com.niksoftware.snapseed:bool/tb_show_title</item>
        <item name="*com.niksoftware.snapseed:text_spacing">@*com.niksoftware.snapseed:dimen/tb_title_padding</item>
        <item name="*com.niksoftware.snapseed:tint_color">#ffffff</item>
    </style>

    <style name="MainScreenTheme" parent="@*com.niksoftware.snapseed:style/Theme.Snapseed.NoActionBar">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#d8ffffff</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="*com.niksoftware.snapseed:colorPrimary">@android:color/holo_blue_light</item>
        <item name="*com.niksoftware.snapseed:colorPrimaryDark">@android:color/holo_blue_light</item>
        <item name="*com.niksoftware.snapseed:colorAccent">@android:color/holo_blue_bright</item>
    </style>


    <style name="SolidActionBarStyle" parent="@*com.niksoftware.snapseed:style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="*com.niksoftware.snapseed:background">@android:color/holo_blue_light</item>
    </style>
</resources>