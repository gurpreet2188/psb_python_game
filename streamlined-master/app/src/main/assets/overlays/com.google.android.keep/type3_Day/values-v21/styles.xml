<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Platform.V21.AppCompat.Light" parent="@*android:style/Theme.Material.Light.NoActionBar">
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:colorControlNormal">#1e1e1e</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorHintInverse">@*com.google.android.keep:color/abc_hint_foreground_material_dark</item>
        <item name="android:textColorHint">@*com.google.android.keep:color/abc_hint_foreground_material_light</item>
        <item name="android:textColorLink">?android:colorAccent</item>
        <item name="android:buttonBarStyle">?buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?buttonBarButtonStyle</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
    </style>

    <style name="DrawerLandingPageItemTextActiveStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1e1e1e</item>
    </style>

    <style name="DrawerItemIconStyle">
        <item name="android:tint">#1e1e1e</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">32.0dip</item>
        <item name="android:layout_height">32.0dip</item>
        <item name="android:scaleType">center</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="ContextualActionBarTheme" parent="@*com.google.android.keep:style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorControlNormal">#1e1e1e</item>
        <item name="android:elevation">0.0dip</item>
        <item name="android:textColorPrimary">#1e1e1e</item>
        <item name="*com.google.android.keep:actionModeBackground">@android:color/holo_red_light</item>
        <item name="*com.google.android.keep:colorControlNormal">#1e1e1e</item>
    </style>

    <style name="DrawerLandingPageItemTextStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#d81e1e1e</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="BottomSheetButtonStyle">
        <item name="android:tint">#1e1e1e</item>
        <item name="android:layout_width">48.0dip</item>
        <item name="android:layout_height">48.0dip</item>
        <item name="android:scaleType">center</item>
    </style>



</resources>