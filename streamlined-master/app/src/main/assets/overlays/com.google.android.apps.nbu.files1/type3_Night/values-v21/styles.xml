    <style name="Theme.GoogleMaterial.Light.NoActionBar" parent="@*com.google.android.apps.nbu.files:style/Theme.GoogleMaterial.Dark">
        <item name="*com.google.android.apps.nbu.files:windowActionBar">false</item>
        <item name="*com.google.android.apps.nbu.files:windowNoTitle">true</item>
    </style>

    <style name="Theme.GoogleMaterial.Light" parent="@*com.google.android.apps.nbu.files:style/Theme.GoogleMaterial.Dark" />
    <style name="Theme.GoogleMaterial.Light.BottomSheetDialog" parent="@*com.google.android.apps.nbu.files:style/Theme.GoogleMaterial.Dark.BottomSheetDialog" />
    <style name="Theme.GoogleMaterial.Light.Dialog" parent="@*com.google.android.apps.nbu.files:style/Theme.GoogleMaterial.Dark.Dialog" />

