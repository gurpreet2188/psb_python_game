<?xml version="1.0" encoding="utf-8"?>
<resources>
   
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorLink">?android:colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:buttonBarStyle">?buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?buttonBarButtonStyle</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
    </style>

    <style name="WhiteTheme" parent="@*com.google.android.apps.translate:style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@android:color/holo_blue_bright</item>
        <item name="android:colorPrimaryDark">@android:color/holo_blue_bright</item>
        <item name="android:colorControlNormal">#ffffff</item>
        <item name="android:colorControlActivated">#ffffff</item>
        <item name="android:titleTextColor">#ffffff</item>
        <item name="android:tint">#ffffff</item>
    </style>

</resources>
