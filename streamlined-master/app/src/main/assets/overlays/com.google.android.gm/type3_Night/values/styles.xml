<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AttachmentButtonStyle">
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:backgroundTint">@android:color/background_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:addStatesFromChildren">true</item>
        <item name="android:layout_width">48.0dip</item>
        <item name="android:layout_height">48.0dip</item>
    </style>

    <style name="SearchTextStyle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AccountsSwitcher" >
        <item name="android:backgroundTint">@android:color/background_dark</item>
    </style>

    <style name="ChipTitleStyle">
        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:id">@android:id/title</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ChipSubtitleStyle">
        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:id">@android:id/text1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.SearchResult" parent="">
        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textColorHint">#cfcfcf</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.SearchResult.Subtitle" parent="">
        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColorHint">#cfcfcf</item>
    </style>

    <style name="RecipientEditTextViewBase" parent="@android:attr/autoCompleteTextViewStyle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">32.0dip</item>
        <item name="android:popupBackground">@android:color/background_dark</item>
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
    </style>

