    <style name="ComposeSubjectView" parent="@*com.google.android.gm:style/ComposeEditTextView">
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:textColorHint">#c1ffffff</item>
        <item name="android:hint">@*com.google.android.gm:string/subject_hint</item>
        <item name="android:inputType">textEmailSubject|textAutoCorrect|textCapSentences|textImeMultiLine|textMultiLine</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi|flagNoFullscreen</item>
    </style>

    <style name="ComposeFieldContentBase">
        <item name="android:editTextColor">#ffffff</item>
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:minHeight">56.0dip</item>
    </style>

    <style name="ComposeAreaWrapper">
        <item name="android:editTextColor">#ffffff</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="AbstractComposeArea">
        <item name="android:editTextColor">#ffffff</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:backgroundTint">@android:color/background_dark</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="ComposeFieldLayout">
        <item name="android:editTextColor">#ffffff</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:addStatesFromChildren">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WelcomeTour">
        <item name="android:background">@android:color/background_dark</item>
    </style>

    <style name="ComposeFromTextViewStyle">
        <item name="android:editTextColor">#ffffff</item>
        <item name="android:backgroundTint">@android:color/background_dark</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>