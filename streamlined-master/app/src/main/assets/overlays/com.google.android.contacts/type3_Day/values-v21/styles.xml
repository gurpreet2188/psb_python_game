    <style name="ContactsAlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
    </style>


    <style name="DrawerItemTextActiveStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@*android:color/accent_material_light</item>
    </style>

    <style name="AddContactsButtonStyle" parent="@*com.google.android.contacts:style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#1e1e1e</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ContactEditorAccountsChangedActivityTheme" parent="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth">
        <item name="android:textColorPrimary">#1e1e1e</item>
        <item name="android:textColorSecondary">#d81e1e1e</item>
        <item name="android:listViewStyle">@*com.google.android.contacts:style/ListViewStyle</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
    </style>

    <style name="Base.ThemeOverlay.AppCompat.ActionBar" parent="@*com.google.android.contacts:style/Base.ThemeOverlay.AppCompat">
        <item name="*com.google.android.contacts:colorControlNormal">#1e1e1e</item>
        <item name="*com.google.android.contacts:searchViewStyle">@*com.google.android.contacts:style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>

    <style name="Base.ThemeOverlay.AppCompat.Dark.ActionBar" parent="@*com.google.android.contacts:style/Base.ThemeOverlay.AppCompat.Dark">
        <item name="@*com.google.android.contacts:colorControlNormal">#1e1e1e</item>
        <item name="@*com.google.android.contacts:searchViewStyle">@*com.google.android.contacts:style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>

    <style name="ContactsActionBarThemeAppCompat" parent="@*com.google.android.contacts:style/ThemeOverlay.AppCompat.ActionBar">
        <item name="*com.google.android.contacts:colorControlNormal">#1e1e1e</item>
        <item name="android:colorControlNormal">#1e1e1e</item>
        <item name="android:tint">#1e1e1e</item>
        <item name="android:color">#1e1e1e</item>
    </style>


</resources>