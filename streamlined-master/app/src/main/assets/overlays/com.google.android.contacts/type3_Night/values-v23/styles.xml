<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.GoogleMaterial.Toolbar.Subtitle" parent="@*com.google.android.contacts:style/TextAppearance.GoogleMaterial.Subhead1">
        <item name="android:textSize">@*com.google.android.contacts:dimen/google_toolbar_text_size_subtitle</item>
        <item name="android:textColor">#d8ffffff</item>
    </style>
    <style name="TextAppearance.GoogleMaterial.Toolbar.Title" parent="@*com.google.android.contacts:style/TextAppearance.GoogleMaterial.Headline6">
        <item name="android:textSize">@*com.google.android.contacts:dimen/google_toolbar_text_size_title</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Widget.Design.AppBarLayout" parent="@android:style/Widget">
        <item name="android:background">@android:color/holo_purple</item>
        <item name="android:stateListAnimator">@*com.google.android.contacts:animator/design_appbar_state_list_animator</item>
        <item name="android:touchscreenBlocksFocus">true</item>
    </style>

    <style name="Base.Widget.AppCompat.PopupMenu" parent="@android:style/Widget.Material.PopupMenu" >
        <item name="android:backgroundTint">@android:color/holo_purple</item>
    </style>
    <style name="Base.Widget.AppCompat.PopupMenu.Overflow" parent="@*com.google.android.contacts:style/Base.Widget.AppCompat.PopupMenu">
        <item name="android:backgroundTint">@android:color/holo_purple</item>
        <item name="android:dropDownHorizontalOffset">-4.0dip</item>
        <item name="android:overlapAnchor">true</item>
    </style>
</resources>
