<?xml version="1.0" encoding="utf-8"?>
<resources>
   
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material.Light">
        <item name="android:colorControlNormal">#1e1e1e</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorLink">?android:colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:buttonBarStyle">?buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?buttonBarButtonStyle</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
    </style>

    <style name="BaseAppTheme" parent="@android:style/Theme.Material.Light" >
        <item name="android:colorControlNormal">#1e1e1e</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:navigationBarColor">@android:color/background_light</item>
    </style>

    <style name="BaseDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.MinWidth">
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
    </style>
</resources>
