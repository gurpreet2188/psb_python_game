<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material.Light">
        <item name="android:colorControlNormal">#1e1e1e</item>
        <item name="android:titleTextColor">#1e1e1e</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorLink">?android:colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:buttonBarStyle">?buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?buttonBarButtonStyle</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
        <item name="android:colorBackgroundFloating">@android:color/background_dark</item>
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:statusBarColor">@android:color/holo_red_light</item>
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="@*com.quoord.tapatalkpro.activity:style/Theme.AppCompat.Light">
        <item name="*com.quoord.tapatalkpro.activity:colorControlNormal">#1e1e1e</item>
        <item name="android:colorControlNormal">#1e1e1e</item>
        <item name="android:color">#1e1e1e</item>
        <item name="*com.quoord.tapatalkpro.activity:windowActionBar">false</item>
        <item name="*com.quoord.tapatalkpro.activity:windowNoTitle">true</item>
    </style>

    <dimen name="card_elevation">0.0dip</dimen>
    <dimen name="cardview_default_elevation">0.0dip</dimen>
    <dimen name="main_screen_card_corner_elevation">0.0dip</dimen>
    <dimen name="theme_information_card_corner_elevation">0.0dip</dimen>
    <dimen name="abc_action_bar_elevation_material">0.0dip</dimen>
    <dimen name="action_bar_elevation">0.0dip</dimen>
    <dimen name="design_appbar_elevation">0.0dip</dimen>

    <style name="statusbar_transparent" parent="@*com.quoord.tapatalkpro.activity:style/ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:statusBarColor">@android:color/holo_red_light</item>
    </style>
</resources>