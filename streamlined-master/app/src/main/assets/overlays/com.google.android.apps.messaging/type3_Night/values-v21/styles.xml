<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material">

        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorLink">?android:colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:buttonBarStyle">?buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?buttonBarButtonStyle</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Borderless.Colored" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="BugleToolbarTheme" parent="@*com.google.android.apps.messaging:style/BugleBaseTheme.NoActionBar">
        <item name="android:textColorHighlight">@android:color/holo_blue_bright</item>
        <item name="*com.google.android.apps.messaging:actionBarStyle">@*com.google.android.apps.messaging:style/BugleToolbar</item>
        <item name="*com.google.android.apps.messaging:actionBarWidgetTheme">@*com.google.android.apps.messaging:style/BuglePlacePickerSearchViewStyle</item>
        <item name="*com.google.android.apps.messaging:colorPrimary">@android:color/holo_blue_light</item>
        <item name="*com.google.android.apps.messaging:colorPrimaryDark">@android:color/holo_blue_light</item>
        <item name="*com.google.android.apps.messaging:colorAccent">@android:color/holo_blue_bright</item>
    </style>

    <style name="ColorAccentBlueOverrideStyle">
        <item name="*com.google.android.apps.messaging:colorAccent">@android:color/holo_blue_bright</item>
    </style>

    <style name="ConversationCompose2oSubjectText" parent="@*com.google.android.apps.messaging:style/ConversationComposeSendText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#c1ffffff</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginStart">12.0dip</item>
    </style>

    <style name="BugleTheme.DialogActivity" parent="@*com.google.android.apps.messaging:style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:background">@android:color/holo_purple</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Button" parent="@android:style/TextAppearance.Material.Button" >
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Widget.Button" parent="@android:style/TextAppearance.Material.Widget.Button">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Base.Widget.AppCompat.Button" parent="@android:style/Widget.Material.Button" >
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="Base.Widget.AppCompat.Button.Borderless" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="Base.Widget.AppCompat.Button.Small" parent="@android:style/Widget.Material.Button.Small" >
        <item name="android:textColor">#ffffff</item>
    </style>


</resources>