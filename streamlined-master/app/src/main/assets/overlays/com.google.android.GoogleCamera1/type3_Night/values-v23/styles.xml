<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CameraSettings" parent="@android:style/Theme.Material">
        <item name="android:tint">@android:color/holo_blue_bright</item>
        <item name="android:textColorPrimary">@android:color/holo_blue_bright</item>
        <item name="android:preferenceCategoryStyle">@*com.google.android.GoogleCamera:style/PreferenceCategoryStyle</item>
        <item name="android:preferenceStyle">@*com.google.android.GoogleCamera:style/PreferenceStyle</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorAccent">@android:color/holo_blue_bright</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:colorPrimary">@android:color/background_dark</item>
        <item name="android:colorPrimaryDark">@android:color/background_dark</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Theme.Camera" parent="@android:style/Theme.Material">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowBackground">@*com.google.android.GoogleCamera:drawable/cover</item>
        <item name="android:windowTitleSize">0.0dip</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackgroundCacheHint">@*com.google.android.GoogleCamera:color/camera_gray_background</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:actionBarStyle">@*com.google.android.GoogleCamera:style/Camera.ActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@*com.google.android.GoogleCamera:color/default_system_ui_background</item>
        <item name="android:rotationAnimation">seamless</item>
    </style>
</resources>
