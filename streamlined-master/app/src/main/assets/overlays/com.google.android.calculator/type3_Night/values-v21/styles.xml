<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.V21.AppCompat.Light" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:buttonBarStyle">?buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?buttonBarButtonStyle</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
    </style>

    <style name="Theme.AppCompat.DayNight" parent="@*com.google.android.calculator:style/Theme.AppCompat" >
        <item name="android:navigationBarColor">@android:color/background_dark</item>
    </style>
    <style name="Theme.GoogleMaterial.DayNight.Dialog.Alert" parent="@*com.google.android.calculator:style/Theme.GoogleMaterial.Dark.Dialog.Alert" >
        <item name="android:navigationBarColor">@android:color/background_dark</item>
    </style>
    <style name="ThemeOverlay.Popup" parent="@*com.google.android.calculator:style/ThemeOverlay.AppCompat.Dark">
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:textDirection">locale</item>
        <item name="*com.google.android.calculator:fontFamily">sans-serif</item>
    </style>
</resources>
