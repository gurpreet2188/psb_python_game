<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Platform.AppCompat" parent="@android:style/Theme.Material">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorLink">?android:colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:buttonBarStyle">?buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?buttonBarButtonStyle</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
    </style>

    <style name="CardViewStyle.Dark" parent="@android:style/Widget">
        <item name="*com.topjohnwu.magisk:cardCornerRadius">0.0dip</item>
        <item name="*com.topjohnwu.magisk:cardElevation">0.0dip</item>
        <item name="*com.topjohnwu.magisk:cardMaxElevation">0.0dip</item>
        <item name="*com.topjohnwu.magisk:cardUseCompatPadding">false</item>
        <item name="*com.topjohnwu.magisk:cardPreventCornerOverlap">true</item>
        <item name="*com.topjohnwu.magisk:cardBackgroundColor">@android:color/holo_purple</item>
    </style>

    <style name="SuRequest.Dark" parent="@*com.topjohnwu.magisk:style/Theme.AppCompat.Dialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
    </style>


</resources>
