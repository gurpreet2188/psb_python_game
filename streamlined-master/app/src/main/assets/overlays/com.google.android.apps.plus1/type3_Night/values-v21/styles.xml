            <item name="android:textSize">10.0sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@android:color/holo_blue_bright</item>
            <item name="android:gravity">center</item>
            <item name="android:background">@android:drawable/btn_star</item>
            <item name="android:layout_gravity">end|center|top</item>
            <item name="android:layout_width">18.0dip</item>
            <item name="android:layout_height">18.0dip</item>
