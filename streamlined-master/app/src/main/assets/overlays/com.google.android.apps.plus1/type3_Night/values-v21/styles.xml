    <style name="Base.Widget.AppCompat.ImageButton" parent="@android:style/Widget.Material.ImageButton" >
        <item name="android:color">#ffffff</item>
        <item name="android:tint">#ffffff</item>
        <item name="*com.google.android.apps.plus:color">#ffffff</item>
    </style>

    <style name="TextStyle.EntityCard" parent="@*com.google.android.apps.plus:style/TextStyle" >
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="TextStyle.EntityCard.Primary" parent="@*com.google.android.apps.plus:style/TextStyle.PlusOne.SubHeadText" >
