    <style name="TextStyle.Stream.SquareText" parent="@*com.google.android.apps.plus:style/TextStyle.Bold">
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

        <style name="BottomBarItemVertical">
            <item name="android:textSize">12.0sp</item>
            <item name="android:textColor">#d8ffffff</item>
            <item name="android:ellipsize">end</item>
            <item name="android:gravity">center</item>
            <item name="android:paddingTop">7.0dp</item>
            <item name="android:singleLine">true</item>
            <item name="android:drawablePadding">-5.0dp</item>
        </style>

             <style name="BottomBarNotificationCounter">
                 <item name="android:backgroundTint">@null</item>
               <item name="android:gravity">center</item>
               <item name="android:layout_gravity">end|center|top</item>
