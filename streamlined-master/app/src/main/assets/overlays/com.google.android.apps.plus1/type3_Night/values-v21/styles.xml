        <item name="android:buttonBarButtonStyle">?buttonBarButtonStyle</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
    </style>

    <style name="Theme.Plus.ActionBar" parent="@*com.google.android.apps.plus:style/ThemeOverlay.AppCompat.Light">
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#d8ffffff</item>
        <item name="android:actionBarSize">@*com.google.android.apps.plus:dimen/action_bar_menu_item_height</item>
        <item name="android:actionOverflowButtonStyle">@*com.google.android.apps.plus:style/Theme.Plus.ActionBar.Overflow</item>
