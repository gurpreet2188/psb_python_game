<?xml version="1.0" encoding="utf-8"?>
<resources>
   
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material">
        <item name="android:backgroundTint">@android:color/background_dark</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorLink">?android:colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:buttonBarStyle">?buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?buttonBarButtonStyle</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
    </style>

    <style name="MyActionBar" parent="@*com.grammarly.android.keyboard:style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:backgroundTint">@android:color/holo_blue_light</item>
    </style>

    <style name="KeyboardView.LXX_Dark" parent="@*com.grammarly.android.keyboard:style/KeyboardView.LXX">
        <item name="android:backgroundTint">@android:color/background_dark</item>
        <item name="*com.grammarly.android.keyboard:functionalKeyBackground">@*com.grammarly.android.keyboard:drawable/btn_keyboard_key_functional_lxx_dark</item>
        <item name="*com.grammarly.android.keyboard:functionalTextColor">@*com.grammarly.android.keyboard:color/key_text_color_lxx_dark</item>
        <item name="*com.grammarly.android.keyboard:keyBackground">@*com.grammarly.android.keyboard:drawable/btn_keyboard_key_lxx_dark</item>
        <item name="*com.grammarly.android.keyboard:keyHintLabelColor">@*com.grammarly.android.keyboard:color/key_text_inactive_color_lxx_dark</item>
        <item name="*com.grammarly.android.keyboard:keyHintLetterColor">@*com.grammarly.android.keyboard:color/key_hint_letter_color_lxx_dark</item>
        <item name="*com.grammarly.android.keyboard:keyPreviewTextColor">@*com.grammarly.android.keyboard:color/key_text_color_lxx_dark</item>
        <item name="*com.grammarly.android.keyboard:keyShiftedLetterHintActivatedColor">@*com.grammarly.android.keyboard:color/key_text_color_lxx_dark</item>
        <item name="*com.grammarly.android.keyboard:keyShiftedLetterHintInactivatedColor">@*com.grammarly.android.keyboard:color/key_text_inactive_color_lxx_dark</item>
        <item name="*com.grammarly.android.keyboard:keyTextColor">@*com.grammarly.android.keyboard:color/key_text_color_lxx_dark</item>
        <item name="*com.grammarly.android.keyboard:keyTextInactivatedColor">@*com.grammarly.android.keyboard:color/key_functional_text_color_lxx_dark</item>
        <item name="*com.grammarly.android.keyboard:spacebarBackground">@*com.grammarly.android.keyboard:drawable/btn_keyboard_spacebar_lxx_dark</item>
    </style>
</resources>