<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.V21.AppCompat.Light" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:textColorHintInverse">@*com.android.chrome:color/abc_hint_foreground_material_light</item>
        <item name="android:textColorHint">@*com.android.chrome:color/abc_hint_foreground_material_dark</item>
        <item name="android:textColorLink">?android:colorAccent</item>
        <item name="android:buttonBarStyle">?buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?buttonBarButtonStyle</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
    </style>

    <style name="ContextualSearchTextViewLayout">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:paddingLeft">53.0dip</item>
        <item name="android:paddingRight">53.0dip</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ContextualSearchCaptionTextView">
        <item name="android:textAppearance">@*com.android.chrome:style/BlackBody</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">7.0dip</item>
        <item name="android:layout_marginRight">7.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ThemeWithActionBarBase" parent="@*com.android.chrome:style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="*com.android.chrome:colorPrimary">@android:color/holo_blue_light</item>
        <item name="*com.android.chrome:colorPrimaryDark">@android:color/holo_blue_light</item>
        <item name="*com.android.chrome:colorAccent">@android:color/holo_blue_bright</item>
    </style>



    <style name="Base.Widget.AppCompat.ListView" parent="@android:style/Widget.Material.ListView" >
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:backgroundTint">@android:color/background_dark</item>
    </style>
    <style name="Base.Widget.AppCompat.ListView.DropDown" parent="@android:style/Widget.Material.ListView.DropDown" >
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:backgroundTint">@android:color/background_dark</item>
    </style>

    <style name="Base.Widget.AppCompat.Light.ActionBar.Solid" parent="@*com.android.chrome:style/Base.Widget.AppCompat.ActionBar">
        <item name="*com.android.chrome:background">@android:color/holo_blue_light</item>
        <item name="*com.android.chrome:backgroundStacked">@android:color/holo_blue_light</item>
        <item name="*com.android.chrome:backgroundSplit">@android:color/holo_blue_light</item>
    </style>
</resources>